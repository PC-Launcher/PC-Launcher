<Window x:Class="PCStreamerLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PCStreamerLauncher"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="800"
        Height="600">

    <!-- Root container for everything -->
    <Grid>

        <!-- Weather Panel (Top Left) -->
        <Border x:Name="WeatherBorder"
                Background="#22000000"
                CornerRadius="5"
                Padding="15"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20,20,0,0">
            <Grid MinHeight="110" MinWidth="480">
                <!-- Divide the panel into 3 columns: 
                     Wide area for weather icon, 
                     Medium spacing, 
                     Area for text -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Weather Icon (Left) with more space -->
                <Image x:Name="WeatherIcon"
                       Width="120"
                       Height="100"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

                <!-- Vertical Stack for Weather Details (Right) -->
                <StackPanel Grid.Column="2" 
                            Orientation="Vertical" 
                            VerticalAlignment="Center">
                    <!-- First Row: City and Temperature -->
                    <StackPanel Orientation="Horizontal" 
                                Margin="20,0,0,5"
                                HorizontalAlignment="Right">
                        <TextBlock x:Name="CityTextBlock"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,10,0">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="5"
                                                  ShadowDepth="0"
                                                  Opacity="0.8"
                                                  Color="Black"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock x:Name="TemperatureTextBlock"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="5"
                                                  ShadowDepth="0"
                                                  Opacity="0.8"
                                                  Color="Black"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                    <!-- Second Row: Weather Conditions - Changed to right alignment -->
                    <TextBlock x:Name="ConditionsTextBlock"
                         FontSize="22"
                         FontWeight="SemiBold"
                         Foreground="White"
                         Margin="0,0,0,15"
                         HorizontalAlignment="Right">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="5"
                          ShadowDepth="0"
                          Opacity="0.8"
                          Color="Black"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <!-- Third Row: Humidity and Wind -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,5,0,0">
                        <TextBlock x:Name="HumidityTextBlock"
                                   FontSize="16"
                                   Foreground="White"
                                   Opacity="0.9"
                                   Margin="0,0,20,0"/>
                        <TextBlock x:Name="WindTextBlock"
                                   FontSize="16"
                                   Foreground="White"
                                   Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Clock Panel (Top Right) -->
        <Border x:Name="ClockBorder"
                Background="#22000000"
                CornerRadius="5"
                Padding="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,20,20,0">
            <!-- This border also uses a semi-transparent black background for the clock. -->
            <TextBlock x:Name="ClockTextBlock"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="5"
                                      ShadowDepth="0"
                                      Opacity="0.8"
                                      Color="Black"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>

        <!-- UniformGrid for Launcher Icons (Center) -->
        <UniformGrid x:Name="AppGrid"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="20"/>
    </Grid>
</Window>